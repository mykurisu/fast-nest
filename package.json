{
  "name": "{{projectName}}",
  "version": "{{projectVersion}}",
  "description": "{{projectDescription}}",
  "main": "main.ts",
  "scripts": {
    "start": "nodemon --exec \"ts-node\" main.ts",
    "build": "tsc -p tsconfig.json",
    "deploy": "tsc -p tsconfig.json && cross-env NODE_ENV=production node build/main.js",
    "pm2": "tsc -p tsconfig.json && cross-env NODE_ENV=production pm2 start pm2.json",
    "re:pm2": "tsc -p tsconfig.json && cross-env NODE_ENV=production pm2 restart pm2.json"
  },
  "keywords": [
    "nest.js",
    "nodejs",
    "typescript"
  ],
  "author": "{{author}}",
  "license": "ISC",
  "dependencies": {
    "@mykurisu/fast-nest-logger": "{{loggerVerion}}",
    "@nestjs/common": "^7.2.0",
    "@nestjs/core": "^7.2.0",
    "@nestjs/platform-express": "^6.10.1",
    "@nestjs/serve-static": "^1.0.1",
    "blueimp-md5": "^2.12.0",
    "bytes": "^3.1.0",{{#if gzip}}
    "compression": "^1.7.4",{{/if}}
    "cookie-parser": "^1.4.4",
    "cross-env": "^7.0.2",
    "lodash": "^4.17.15",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.3",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@types/blueimp-md5": "^2.18.0",
    "@types/bytes": "^3.1.0",{{#if gzip}}
    "@types/compression": "^1.7.0",{{/if}}
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.2",
    "@types/lodash": "^4.14.156",
    "nodemon": "^1.19.4",
    "ts-node": "^8.5.2",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "nodemonConfig": {
    "watch": [
      "modules/",
      "common/",
      "app.module.ts",
      "main.ts"
    ],
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "ext": "ts"
  }
}
